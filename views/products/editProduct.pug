extends ../layout

block content
    h1 Edit product
    .container
        form(action='/products/' + product.id + '/edit' method='POST')
            .form-group
                label(for='name') Name
                input.form-control(type='text' id='name' name='name' value=product.name required)
            .form-group
                label(for='model') Model
                textarea.form-control(id='model' name='model' required)= product.model
            .form-group
                label(for='material') Material
                textarea.form-control(id='material' name='material' required)= product.material
            .form-group
                label(for='length') Length
                input.form-control(type='text' id='length' name='length' value=product.length required)
            .form-group
                label(for='imageUrl') Image URL
                input.form-control(type='text' id='imageUrl' name='imageUrl' value=product.imageUrl)
            .form-group
                label(for='price') Price
                input.form-control(type='number' id='price' name='price' value=product.price required step='0.01')
            button.btn.btn-primary(type='submit') Save Changes
            a.btn.btn-secondary(href='/products/' + product.id) Cancel
