extends ../layout

block content
    .container
        section.section-area
            img.section-area-img(src='/images/background-img.jpg' alt='bg-image')
            .loginbox
                img.logo(src='/images/Login-img.jpg' alt='User Logo')
                h2 Влизане
                if message
                    .alert.alert-danger(role='alert')
                        | #{message}
                form(action='/users/login' method='POST')
                    label(for='email') Имейл
                    input.form-control(type='email' id='email' name='email' placeholder='User Email' required)
                    
                    label(for='password') Парола
                    input.form-control(type='password' id='password' name='password' placeholder='Enter Your Password' required)
                    
                    input.btn.btn-primary(type='submit' value='Влизане')

                    .link
                        a(href='#') Забравена парола?
                        | 
                        a(href='#') Нямате акаунт?
