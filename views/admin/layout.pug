doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Admin Panel
    link(rel="stylesheet" href="/stylesheets/style.css")
    link(rel="stylesheet" href="/stylesheets/admin-style.css")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
  body
    .row 
      .col-md-4.col-lg-3.col-xl-2.col-4
        // Sidebar
        .d-flex.flex-column.flex-shrink-0.p-3.text-white.bg-dark.sidebar-container
          a.d-flex.align-items-center.mb-3.mb-md-0.me-md-auto.text-white.text-decoration-none(href="/")
            svg.bi.me-2(width="40" height="32")
              use(xlink:href="#bootstrap")
            span.fs-4 Admin Panel
          hr
          ul.nav.nav-pills.flex-column.mb-auto
            li.nav-item
              a.nav-link(class=(activePage === 'home' ? 'active' : 'text-white') href="/admin/index")
                svg.bi.me-2(width="16" height="16")
                  use(xlink:href="#home")
                | Home
            li
              a.nav-link(class=(activePage === 'snowboards' ? 'active' : 'text-white') href="/admin/snowboards")
                svg.bi.me-2(width="16" height="16")
                  use(xlink:href="#speedometer2")
                | Snowboards
            li
              a.nav-link(class=(activePage === 'orders' ? 'active' : 'text-white') href="/admin/orders")
                svg.bi.me-2(width="16" height="16")
                  use(xlink:href="#table")
                | Orders
          hr
          .dropdown
            a.d-flex.align-items-center.text-white.text-decoration-none.dropdown-toggle(href="#" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false")
              img.rounded-circle.me-2(src="/images/admin-user.jpg" alt="" width="32" height="32")
              if currentUser
                strong=currentUser.firstName
              else
                strong mdo
            ul.dropdown-menu.dropdown-menu-dark.text-small.shadow(aria-labelledby="dropdownUser1")
              li
                a.dropdown-item(href="/admin/profile") Profile
              li
                hr.dropdown-divider
              li
                a.dropdown-item(href="#") Sign out
      .col
        //Content area
        .p-4(style="flex-grow: 1;")
          block content

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
