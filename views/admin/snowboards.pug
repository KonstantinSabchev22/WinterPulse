extends layout

block content
  .container
    h1 Snowboards
    .addButton-container
      a.btn.btn-primary(href="/admin/snowboards/new") Add Snowboard
      

    // Snowboards Table
    table.table.table-striped.table-hover
      thead
        tr
          th # ID
          th Name
          th Model
          th Length
          th Material
          th Price ($)
          th Image
          th Edit
          th Delete
      tbody
        each snowboard in snowboards
          tr
            td= snowboard.id
            td= snowboard.name
            td= snowboard.model
            td= snowboard.length
            td= snowboard.material || 'N/A'
            td= snowboard.price.toFixed(2)
            td
              if snowboard.imageUrl
                img(src=snowboard.imageUrl alt=snowboard.name width="50")
              else
                | N/A
            // Edit Button
            td
              a.btn.btn-sm.btn-warning(href=`/admin/snowboards/${snowboard.id}/edit`) Edit
            // Delete Button
            td
              form(action=`/admin/snowboards/${snowboard.id}/delete` method="POST" onsubmit="return confirm('Are you sure you want to delete this snowboard?');")
                button.btn.btn-sm.btn-danger(type="submit") Delete
