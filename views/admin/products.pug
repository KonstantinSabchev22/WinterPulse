extends layout

block content
  .container
    h1 Products
    .addButton-container
      a.btn.btn-primary(href="/admin/products/new") Add Product
      

    // Products Table
    table.table.table-striped.table-hover
      thead
        tr
          th # ID
          th Name
          th Model
          th Length
          th Material
          th Price ($)
          th Image
          th Edit
          th Delete
      tbody
        each product in products
          tr
            td= product.id
            td= product.name
            td= product.model
            td= product.length
            td= product.material || 'N/A'
            td= product.price.toFixed(2)
            td
              if product.imageUrl
                img(src=product.imageUrl alt=product.name width="50")
              else
                | N/A
            // Edit Button
            td
              a.btn.btn-sm.btn-warning(href=`/admin/products/${product.id}/edit`) Edit
            // Delete Button
            td
              form(action=`/admin/products/${product.id}/delete` method="POST" onsubmit="return confirm('Are you sure you want to delete this product?');")
                button.btn.btn-sm.btn-danger(type="submit") Delete
