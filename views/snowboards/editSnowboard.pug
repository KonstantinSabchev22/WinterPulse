extends ../layout

block content
    h1 Edit Snowboard
    .container
        form(action='/snowboards/' + snowboard.id + '/edit' method='POST')
            .form-group
                label(for='name') Name
                input.form-control(type='text' id='name' name='name' value=snowboard.name required)
            .form-group
                label(for='model') Model
                textarea.form-control(id='model' name='model' required)= snowboard.model
            .form-group
                label(for='material') Material
                textarea.form-control(id='material' name='material' required)= snowboard.material
            .form-group
                label(for='length') Length
                input.form-control(type='text' id='length' name='length' value=snowboard.length required)
            .form-group
                label(for='imageUrl') Image URL
                input.form-control(type='text' id='imageUrl' name='imageUrl' value=snowboard.imageUrl)
            button.btn.btn-primary(type='submit') Save Changes
            a.btn.btn-secondary(href='/snowboards/' + snowboard.id) Cancel
